pipeline {
    agent any

    stages {
        stage('Clone Repository') {
            steps {
                git url: 'https://github.com/Maram-Hassan/ansible-lab.git', branch: 'main', credentialsId: 'dd22c8fd-509b-467e-a5ee-10e58593b2c9'
            }
        }

        stage('Install Nexus') {
            steps {
                ansiblePlaybook(
                    playbook: 'play-book.yml',
                    inventory: 'inventory',
                    credentialsId: 'b7728db5-7ee2-4294-afe8-fcaa0aaf4a2c',
                )
            }
        }
    }
}
